{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"target": "ES2022",
		"module": "ESNext",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowImportingTsExtensions": false,
		"noEmit": false
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"dist",
		"node_modules",
		"**/*.test.ts"
	]
}